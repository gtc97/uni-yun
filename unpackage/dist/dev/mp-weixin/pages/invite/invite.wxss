
.invite-wrapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 20px;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.invite-qrcode {
	border-radius: 10px;
	box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 10px 1px;
	overflow: hidden;
}
.share-btn {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	padding: 20px 0px 10px 0px;
}
.share-btn button {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin: 0px 10px;
	border-radius: 40px;
}

